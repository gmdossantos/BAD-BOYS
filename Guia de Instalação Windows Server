powershell# Verificar servi√ßos cr√≠ticos
$criticalServices = @("DNS", "DHCP", "Netlogon", "ADWS", "KDC")
foreach ($service in $criticalServices) {
    $svc = Get-Service -Name "*$service*" -ErrorAction SilentlyContinue | Select-Object -First 1
    if ($svc) {
        Write-Host "$($svc.Name): $($svc.Status)"
    }
}
